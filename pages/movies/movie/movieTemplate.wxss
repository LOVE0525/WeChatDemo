@import "../star/starTemplate.wxss";

.movie_container {
  display: flex;
  flex-direction: column;
  width: 220rpx;
  margin: 5px;
  text-align: center;
}

.movie_image {
  width: 100%;
  height: 339rpx;
  margin-bottom: 10px;
}

.movie_title {
  font-size: 12px;
  font-family: Arial, Helvetica, sans-serif;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.movie_desc {
  display: flex;
  flex-direction: column;
  align-items: center;
}
