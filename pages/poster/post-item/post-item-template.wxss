.post_item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-top: 10rpx;
  padding: 5px;
}

.post_item1 {
  flex-grow: 1;
}

.post_item2 {
  margin-left: 10px;
  flex-grow: 2;
  flex-direction: column;
}

.post_item_image {
  width: 60px;
  height: 60px;
}

.post_item_title {
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  color: #000;
  font-size: 16px;
  letter-spacing: 1rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.post_item_desc {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  color: #999;
  font-size: 13px;
  letter-spacing: 1rpx;
 
  overflow: hidden;
}
